<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".ViewTaskDetailActivity">

    <EditText
        android:id="@+id/new_comment_plain_text"
        android:height="@dimen/fui_wrapper_padding_horiz"
        android:layout_width="286dp"
        android:layout_height="41dp"
        android:layout_margin="10dp"
        android:autofillHints=""
        android:background="@drawable/comment_bg"
        android:fontFamily="@font/poppins_italic"
        android:hint="Your new comment..."
        android:inputType="textMultiLine"
        android:paddingLeft="10dp"
        android:textColor="#000000"
        android:textColorHint="@color/colorAccent"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.157"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/comments_recycler_view"
        app:layout_constraintVertical_bias="0.786" />

    <TextView
        android:id="@+id/task_title"
        android:layout_width="202dp"
        android:layout_height="47dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="center"
        android:text="Task Details"
        android:textColor="@color/colorText"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/Name_task"
        android:layout_width="288dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:autofillHints=""
        android:fontFamily="@font/poppins_italic"
        android:hint="Enter the name of task"
        android:maxLines="1"
        android:textColor="@color/colorText"
        android:textColorHint="@color/colorText"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.436"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/task_title" />

    <EditText
        android:id="@+id/Text_task"
        android:layout_width="288dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:layout_marginTop="68dp"
        android:autofillHints=""
        android:fontFamily="@font/poppins_italic"
        android:hint="Enter the task"
        android:inputType="textMultiLine"
        android:textColor="@color/colorText"
        android:textColorHint="@color/colorText"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.436"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Name_task" />

    <EditText
        android:id="@+id/List_task"
        android:layout_width="288dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:autofillHints=""
        android:fontFamily="@font/poppins_italic"
        android:hint="Enter the list"
        android:inputType="textMultiLine"
        android:textColor="@color/colorText"
        android:textColorHint="@color/colorText"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.436"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Text_task"
        app:layout_constraintVertical_bias="0.003" />

    <Button
        android:id="@+id/updateTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/round_button"
        android:elevation="8dp"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="center|bottom"
        android:stateListAnimator="@anim/fragment_fade_enter"
        android:text="UPDATE"
        android:textColor="@color/colorText"
        android:translationZ="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.064"
        app:layout_constraintStart_toStartOf="@+id/comments_recycler_view"
        app:layout_constraintTop_toBottomOf="@+id/List_task"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/add_new_comment_button"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/rounded_button"
        android:fontFamily="@font/poppins_semibold"
        android:foreground="@android:drawable/ic_menu_send"
        android:gravity="center|bottom"
        android:stateListAnimator="@anim/fragment_fade_enter"
        android:textColor="@color/colorText"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.543"
        app:layout_constraintStart_toEndOf="@+id/new_comment_plain_text"
        app:layout_constraintTop_toTopOf="@+id/new_comment_plain_text"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/deleteTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="104dp"
        android:background="@drawable/round_button"
        android:elevation="8dp"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="center|bottom"
        android:stateListAnimator="@anim/fragment_fade_enter"
        android:text="DELETE"
        android:textColor="@color/colorText"
        android:translationZ="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/updateTask"
        app:layout_constraintTop_toTopOf="@+id/updateTask" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/comments_recycler_view"
        android:layout_width="322dp"
        android:layout_height="236dp"
        android:layout_marginBottom="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/deleteTask" />


</androidx.constraintlayout.widget.ConstraintLayout>